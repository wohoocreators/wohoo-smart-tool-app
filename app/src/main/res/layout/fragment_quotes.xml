<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.quotes.quotes"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/shapes">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/quotation"></ImageView>

    <TextView
        android:id="@+id/dailyquotetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Daily Quotes"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
      ></TextView>


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginTop="50dp"
        android:layout_gravity="bottom"
       >
    <GridLayout

android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="3"

        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        >

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="140dp"
android:id="@+id/motivat"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/jj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/motivation"

                ></ImageView>

            <TextView
                android:id="@+id/motxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Motivation"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:id="@+id/lov"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/heart"

                ></ImageView>

            <TextView
                android:id="@+id/lovetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Love"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/friednint"
            android:layout_width="110dp"
            android:layout_height="140dp"

            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/friendship"

                ></ImageView>

            <TextView
                android:id="@+id/frndtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Friendship "
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fqs"
            android:layout_width="122dp"
            android:layout_height="140dp"

            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/jj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/laughing"

                ></ImageView>

            <TextView
                android:id="@+id/funtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Funny"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="140dp"
android:id="@+id/sadqq"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/sadness"

                ></ImageView>

            <TextView
                android:id="@+id/sadtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Sad"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/birth"
            android:layout_width="122dp"
            android:layout_height="140dp"

            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/jj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti"

                ></ImageView>

            <TextView
                android:id="@+id/birtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Birthday"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>

        </LinearLayout>





    </GridLayout>


</LinearLayout>

</LinearLayout>